# Server
PORT=8787
BASE_URL=http://localhost:8787
MCP_API_KEY=replace-with-strong-random

# Trello (single-account PAT mode for v1)
TRELLO_API_BASE=https://api.trello.com/1
TRELLO_KEY=your-trello-api-key
TRELLO_TOKEN=your-trello-token

# Optional: OAuth 2.0 (multi-user)
TRELLO_CLIENT_ID=
TRELLO_CLIENT_SECRET=
TRELLO_REDIRECT_URI=${BASE_URL}/auth/callback

# Webhooks (optional for v1)
TRELLO_WEBHOOK_CALLBACK_URL=${BASE_URL}/webhooks/trello
WEBHOOK_VERIFICATION_SECRET=replace-with-random

# Logging
LOG_LEVEL=info